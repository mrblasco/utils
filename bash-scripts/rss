#!/usr/bin/env bash
# Source: http://sweetme.at/2013/09/05/read-rss-feeds-in-your-terminal/

# Sanity checks
if [ -z $1 ]; then
  echo -e "\033[0;31mError: URL is missing!\033[0m"
  exit 1
fi

# Command
curl "$1"  2>/dev/null | xml fo --omit-decl --nocdata | grep "<title>" | sed -e "s/.*\<title\>\(.*\)\<\/title\>.*/Â»\ \1/g" | less

